<?php
/**
 * @var \Zend\View\Renderer\PhpRenderer $this
 * @var \Omeka\Api\Representation\SiteRepresentation $site
 * @var \Omeka\Api\Representation\ItemRepresentation $item
 * @var \Omeka\Api\Representation\ItemRepresentation $resource
 */

// For a better display, it is recommended to edit the original item/show
// template, and any other one, to include the link to update the selection and to
// skip this partial. This partial can be skipped automatically with module
// BlockDisposition.

// Don't display for anonymous visitors (or display a login link, or for future visitor session).
if (!$this->identity()):
    return;
endif;

$translate = $this->plugin('translate');
$updateSelectionLink = $this->plugin('updateSelectionLink');

$medias = $item->media();
?>

<style>
#content .selection .media.resource { text-align: inherit; }
</style>

<div class="selection">
    <h2><?= $translate('Selection') ?></h2>
    <?php if (count($medias)): ?>
    <h3><?= $translate('Item') ?></h3>
    <?php endif; ?>
    <div class="item resource">
        <?= $updateSelectionLink($item) ?>
        <?= $item->linkPretty() ?>
    </div>
    <?php if (count($medias)): ?>
    <h3><?= $translate('Media') ?></h3>
    <div class="media-list">
        <?php foreach ($medias as $media): ?>
        <div class="media resource">
            <?= $updateSelectionLink($media) ?>
            <?= $media->linkPretty() ?>
        </div>
        <?php endforeach; ?>
    </div>
    <?php endif; ?>
</div>
